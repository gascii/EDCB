<UserControl x:Class="EpgTimer.EpgView.WeekDayView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="25" MinHeight="25">

    <ScrollViewer Name="scrollViewer" VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Hidden">
        <Grid>
            <StackPanel Name="stackPanel_day" Orientation="Horizontal" Margin="1,0,100,0"/>
            <Rectangle Name="rect_day" HorizontalAlignment="Left" StrokeThickness="2" RadiusX="1" RadiusY="1"/>
        </Grid>
    </ScrollViewer>

</UserControl>
